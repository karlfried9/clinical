= simple_form_for @trial_sponsor, html: { class: 'form-horizontal col-md-4' } do |f|
  - if @trial_sponsor.errors.any?
    #error_explanation
      %h2= "#{pluralize(@trial_sponsor.errors.count, t('default_message.error'))}"
      = t('sponsor.error_saving_message')
      %ul
        - @trial_sponsor.errors.full_messages.each do |msg|
          %li= msg

  = f.input :name
  = f.input :contact_info
  = f.button :submit, class: "btn btn-success btn-lg"

